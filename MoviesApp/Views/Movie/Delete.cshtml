@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h6>Confirm Deletion</h6>
<h3>@Model.Name (@Model.Year)</h3>

<form asp-controller="Movie" asp-action="ProcessDeleteRequestById" asp-route-id="@Model.MovieId" method="post" enctype="application/x-www-form-urlencoded">
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Movie" asp-action="GetAllMovies" class="btn btn-primary">Cancel</a>
</form>
